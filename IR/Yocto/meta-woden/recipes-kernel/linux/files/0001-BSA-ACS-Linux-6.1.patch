+bsa_scsi_sata_fill_dma_addr(struct scatterlist *sg)
+{
+
+        bsa_dma_addr = cpu_to_le64(sg_dma_address(sg));
+        bsa_dma_len  = cpu_to_le32(sg_dma_len(sg));
+}
+EXPORT_SYMBOL(bsa_scsi_sata_fill_dma_addr);
