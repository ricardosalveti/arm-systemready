+bsa_scsi_sata_get_dma_addr(struct ata_port *ap, dma_addr_t *dma_addr, unsigned int *dma_len)
+{
+        //Not used struct sil24_port_priv *pp = ap->private_data;
+
+        *dma_addr = bsa_dma_addr;
+        *dma_len  = bsa_dma_len;
+
+        return 0;
+}
+EXPORT_SYMBOL(bsa_scsi_sata_get_dma_addr);
+
